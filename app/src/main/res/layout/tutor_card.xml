<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tutorProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/tutorPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tutorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tutorPic"
            android:text="NAME"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/tutorRatingBar"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tutorPic"
            android:layout_toEndOf="@+id/tutorPic"
            android:isIndicator="true"
            style="@style/customRatingBar"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tutorRatingBar"
            android:text="@string/profile" />

        <Button
            android:id="@+id/messageButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tutorPic"
            android:layout_marginTop="12dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/profileButton"
            android:text="@string/message" />

        <Button
            android:id="@+id/rateButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tutorRatingBar"
            android:layout_marginTop="12dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/messageButton"
            android:text="Rate" />

    </RelativeLayout>
</android.support.v7.widget.CardView>